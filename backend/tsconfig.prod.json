{
    "extends": "./tsconfig.json",
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "src/tests/**/*",
        "dist"
    ],
    "compilerOptions": {
        "skipLibCheck": true,
        "noEmit": false,
        "strict": false,
        "noImplicitAny": false,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node", "express", "cors", "multer"]
    }
}
